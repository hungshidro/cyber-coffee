<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="5dp"
    android:layout_marginVertical="5dp"
    android:paddingHorizontal="3dp"
    android:background="@color/white">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/text_color_light"
        android:src="@drawable/ic_baseline_person_24"
        app:shapeAppearanceOverlay="@style/circle_image" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:padding="4dp">

        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hung dz"
            android:textAppearance="@style/normal_tittle_dark_bold"/>

        <TextView
            android:id="@+id/last_message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hung dz"
            android:lines="1"
            android:maxWidth="150dp"
            android:layout_below="@id/user_name_tv"
            android:textAppearance="@style/small_tittle_dark"/>

        <TextView
            android:id="@+id/last_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:12 20-21-2000"
            android:layout_toRightOf="@id/last_message_tv"
            android:layout_below="@id/user_name_tv"
            android:layout_marginStart="10dp"
            android:textAppearance="@style/small_tittle_dark"/>

    </RelativeLayout>

</LinearLayout>