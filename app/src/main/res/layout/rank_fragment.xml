<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">

    <RelativeLayout
        android:id="@+id/top_layout_rank"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/img">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icons8_sparkling_diamond_96" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_check_rank"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:background="@drawable/round_bt"
            android:text="Xem quyền lợi"
            android:textAppearance="@style/normal_tittle_light_bold"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:stateListAnimator="@drawable/press_animation"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rank_point_layout_rank"
        android:background="@drawable/layout_component"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_layout_rank"
        android:layout_marginTop="14dp"
        android:layout_marginHorizontal="20dp"
        android:padding="14dp"
        >

        <TextView
            android:id="@+id/tv_rank_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hang thanh vien: Ruby"
            android:textAppearance="@style/normal_tittle_dark" />

        <TextView
            android:id="@+id/tv_rank_point_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textAppearance="@style/small_tittle_dark"
            android:layout_alignParentEnd="true"
            />

        <ProgressBar
            android:id="@+id/rank_progess_rank"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="40dp"
            android:paddingHorizontal="10dp"
            android:progress="50"
            android:progressDrawable="@drawable/progress_bar"
            />

        <TextView
            android:id="@+id/tv_rank_point_needed_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F09350"
            android:layout_below="@id/rank_progess_rank"
            android:layout_marginTop="10dp"
            android:text="Còn 1000 điểm để lên rank"
            />

        <ImageView
            android:id="@+id/ic_rank_rank"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/rank_progess_rank"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/icons8_diamond_64"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_layout_rank"
        android:background="@drawable/layout_component"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rank_point_layout_rank"
        android:layout_marginTop="14dp"
        android:layout_marginHorizontal="20dp"
        android:padding="14dp">

    </RelativeLayout>

</RelativeLayout>