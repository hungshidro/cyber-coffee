<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:orientation="horizontal"
    android:background="@drawable/layout_component"
    android:layout_margin="2dp">

    <TextView
        android:id="@+id/tv_seat_history"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="3-04"
        android:textAppearance="@style/big_tittle_dark_bold"
        android:gravity="center"
        android:background="@drawable/border"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_info_seat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingVertical="7dp"
            android:lineSpacingExtra="2dp"
            android:lines="5"
            android:text="Loại máy:
            \nLoại phòng:
            \nTình trạng:
            \nHạn:
            \nPhí:"
            android:textAppearance="@style/small_tittle_dark_bold"
            />

        <TextView
            android:id="@+id/tv_detail_reservation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingVertical="7dp"
            android:lineSpacingExtra="2dp"
            android:lines="5"
            android:text="Vip
            \nVip
            \nĐang đặt
            \n10-10-2000
            \n20000"
            android:layout_marginLeft="85dp"
            android:textAppearance="@style/small_tittle_dark"
            />

        <ImageView
            android:id="@+id/detail_reservation_img"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingEnd="10dp"
            android:paddingStart="20dp"

            app:tint="@color/text_color_dark" />
    </RelativeLayout>
</LinearLayout>